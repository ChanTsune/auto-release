{
  "name": "auto-release",
  "version": "1.0.0",
  "private": true,
  "description": "Auto Release",
  "author": "ChanTsune <yshegou@gmail.com>",
  "license": "MIT",
  "repository": "https://github.com/ChanTsune/auto-release.git",
  "homepage": "https://github.com/ChanTsune/auto-release",
  "bugs": "https://github.com/ChanTsune/auto-release/issues",
  "keywords": [
    "github"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc && (tsc -w --preserveWatchOutput & nodemon)",
    "dev": "npm run build:watch",
    "lint": "standard **/*.ts --fix",
    "test": "jest",
    "test:lint": "jest && standard **/*.ts",
    "test:watch": "jest --watch --notify --notifyMode=change --coverage",
    "pack": "ncc build -m src/index.ts"
  },
  "dependencies": {
    "@actions/core": "^1.0.0",
    "@actions/exec": "^1.0.0",
    "@actions/github": "^2.2.0"
  },
  "devDependencies": {
    "@types/jest": "^25.1.0",
    "@types/nock": "^11.1.0",
    "@types/node": "^13.1.0",
    "@typescript-eslint/parser": "^2.4.0",
    "@zeit/ncc": "^0.22.3",
    "eslint-plugin-typescript": "^0.14.0",
    "jest": "^24.9.0",
    "nock": "^12.0.0",
    "nodemon": "^2.0.0",
    "standard": "^14.3.1",
    "ts-jest": "^25.1.0",
    "typescript": "^3.6.4"
  },
  "engines": {
    "node": ">= 8.3.0"
  },
  "standard": {
    "parser": "@typescript-eslint/parser",
    "env": [
      "jest"
    ],
    "plugins": [
      "typescript"
    ]
  },
  "jest": {
    "testEnvironment": "node"
  }
}
